<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar Máquina"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editTextMachineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Máquina"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/spinnerMachineType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/machine_types"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciclos Personalizados"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/cycleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonAddCycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Ciclo"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/buttonCreateMachine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criar Máquina"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingVertical="12dp"/>
    </LinearLayout>
</ScrollView>
